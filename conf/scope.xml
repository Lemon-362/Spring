<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="s1" class="com.Lemon.Spring2.scope.Student" scope="singleton">
        <property name="sId" value="10001"/>
        <property name="sName" value="Lemon1"/>
    </bean>

    <bean id="s2" class="com.Lemon.Spring2.scope.Student" scope="prototype">
        <property name="sId" value="10002"/>
        <property name="sName" value="Lemon2"/>
    </bean>

</beans>